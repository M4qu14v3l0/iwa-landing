---
//Fonts
import "@fontsource/poppins";

import "@fontsource/antonio";
// Components
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import GoogleAnalytics from "../components/Google/GoogleAnalytics.astro";

// Props
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Isa Digital Agency: Diseño web atractivo, desarrollo rápido y asesoramiento experto para impulsar tu éxito en línea. ¡Construye una presencia digital sólida y atrae a tus clientes potenciales con nosotros!"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- Google tag (gtag.js) -->

		<title>{title}</title>
	</head>

	<script async src=`https://www.googletagmanager.com/gtag/js?id=G-9YNRXBBJXF`
	></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag() {
			dataLayer.push(arguments);
		}
		gtag("js", new Date());

		gtag("config", "G-9YNRXBBJXF");
	</script>

	<body>
		<slot />
	</body>
	<style>
		html {
			font-family: "Poppins";
			background: white;
			height: 100%;
			margin: 0;
			padding: 0;
			overflow-x: hidden;
		}

		body {
			margin: 0;
			padding: 0;
			/* padding-left: clamp(70px, 18%, 700px);
		padding-right: clamp(70px, 18%, 700px); */
			width: 100%;
			height: auto;
			overflow-x: hidden;
		}
	</style>
</html>
