    { pic: "/pictures/hero/web_three.webp" },
    { pic: "/pictures/hero/web_four.webp" },
    { pic: "/pictures/hero/web_five.webp" },
    { pic: "/pictures/hero/web_six.webp" },
    { pic: "/pictures/hero/web_seven.webp" },
    { pic: "/pictures/hero/web_eigth.webp" },
    { pic: "/pictures/hero/web_one.webp" },
    { pic: "/pictures/hero/web_two.webp" },
    { pic: "/pictures/hero/web_three.webp" },
    { pic: "/pictures/hero/web_four.webp" },
    { pic: "/pictures/hero/web_five.webp" },
    { pic: "/pictures/hero/web_six.webp" },
];
---

<div class="animation">
    <div class="box" id="bigBox">
        <div class="content-box">
            {pictures.map((picture) => <img src={picture.pic} alt="imagen" />)}
        </div>
    </div>
</div>

<style>
    .animation {
        position: relative;
        box-sizing: border-box;
    }

    .box {
        position: absolute;
        width: 100vw;
        height: 300vh;
        z-index: -1;
        background-color: #fae053;
        margin-top: -160px;
        transform: translateX(100px) translateY(-480px) rotate(34deg);
        display: flex;
        align-items: center;
    }

    .content-box {
        margin-top: -220px;
        margin-left: 20px;
        position: relative;
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .box img {
        border-radius: 10px;
        width: 100%;
        height: 300px;
    }

    /* @media (max-height: 600px) {
        .box {
            transform: translateX(-200px) translateY(-480px) rotate(34deg);
        }
    } */

    @media (max-width: 900px) {
        .animation {
            display: none;
        }
    }
</style>

<script>
    import gsap from "gsap";
    import ScrollTrigger from "gsap/dist/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const box = document.getElementById("bigBox");

    gsap.from(box, {
        opacity: 0,
        x: 500,
        duration: 1,
    });

    let tl = gsap.timeline({
        scrollTrigger: {
            trigger: ".animation",
            // -=380
            start: "-=300px",
            end: "+=530",
            scrub: 1,
            // markers: true,
        },
    });

    tl.to(box, {
        transform: "rotate(0deg)",
        duration: 1,
        backgroundColor: "#22c55e",
    });
    tl.to(box, {
        opacity: 0,
        x: 800,
        duration: 1,
    });
</script>
