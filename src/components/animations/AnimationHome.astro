];
---

<div class="animation">
    <div class="box" id="bigBox">
        <div class="content-box">
            <div class="img-container">
                {
                    pictures.map((picture) => (
                        <img src={picture.pic} alt="imagen" />
                    ))
                }
            </div>
            <div class="img-container-2">
                {
                    pictures.map((picture) => (
                        <img src={picture.pic} alt="imagen" />
                    ))
                }
            </div>
        </div>
    </div>
</div>

<style>
    .animation {
        position: relative;
        box-sizing: border-box;
    }

    .box {
        position: absolute;
        width: 100vw;
        height: 300vh;
        z-index: -1;
        background-color: #fae053;
        margin-top: -160px;
        transform: translateX(-8vw) translateY(-480px) rotate(34deg);
        display: flex;
        align-items: center;
    }

    .content-box {
        height: 100vh;
        margin-top: -65%;
        margin-left: 20px;
        display: flex;
        flex-direction: column;
    }

    .box img {
        border-radius: 10px;
        width: 100%;
        height: 300px;
    }

    .img-container {
        padding-top: 5px;
        padding-bottom: 5px;
        position: relative;
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        justify-content: center;
        gap: 10px;
        animation: animate 30s linear infinite;
        animation-delay: calc(30s * -1);
    }
    .img-container-2 {
        padding-top: 5px;
        padding-bottom: 5px;
        position: relative;
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        justify-content: center;
        gap: 10px;
        animation: animate_2 30s linear infinite;
        animation-delay: calc(30s / -2);
    }

    @keyframes animate {
        0% {
            transform: translateY(100%);
        }
        100% {
            transform: translateY(-100%);
        }
    }

    @keyframes animate_2 {
        0% {
            transform: translateY(0%);
        }
        100% {
            transform: translateY(-200%);
        }
    }

    /* @media (max-height: 600px) {
        .box {
            transform: translateX(-200px) translateY(-480px) rotate(34deg);
        }
    } */

    @media (max-width: 1300px) {
        .box {
            transform: translateX(10vw) translateY(-480px) rotate(34deg);
        }
    }
    @media (max-width: 900px) {
        .animation {
            display: none;
        }
    }
</style>

<script>
    import gsap from "gsap";
    import ScrollTrigger from "gsap/dist/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const box = document.getElementById("bigBox");

    gsap.from(box, {
        opacity: 0,
        x: 500,
        duration: 1,
    });

    let tl = gsap.timeline({
        scrollTrigger: {
            trigger: ".animation",
            // -=380
            start: "-=300px",
            end: "+=530",
            scrub: 1,
            // markers: true,
        },
    });

    tl.to(box, {
        transform: "rotate(0deg)",
        duration: 1,
        backgroundColor: "#22c55e",
    });
    tl.to(box, {
        opacity: 0,
        x: 800,
        duration: 1,
    });
</script>
